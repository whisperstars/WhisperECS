{
  "name": "@whisperstars/ecs",
  "version": "0.1.1",
  "description": "An efficient and lightweight Entity Component System (ECS)",
  "scripts": {
    "clean": "rimraf ./dist && rimraf ./coverage",
    "test:types": "tsc",
    "test:lib": "vitest",
    "test:lib:dev": "pnpm run test:lib --watch",
    "test:build": "publint --strict",
    "build": "vite build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whisperstars/WhisperECS.git",
    "directory": "packages/ecs"
  },
  "type": "module",
  "types": "dist/esm/index.d.ts",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "ecs",
    "game",
    "engine",
    "typescript"
  ],
  "engines": {
    "node": ">=12"
  },
  "files": [
    "dist",
    "src"
  ],
  "author": "Andrii Hranat",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.19",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-plugin-dts": "^3.7.2",
    "vite-plugin-externalize-deps": "^0.8.0"
  },
  "gitHead": "ae4e6c8ee2bce32d6f2e5cd38997d7322aca38ae"
}
